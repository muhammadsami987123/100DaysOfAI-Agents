# MoodMusicAgent Environment Variables
# Copy this file to .env and fill in your actual API keys

# Spotify API (Optional - for premium music streaming)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8888/callback

# YouTube API (Optional - for free music streaming)
YOUTUBE_API_KEY=your_youtube_api_key_here

# OpenAI API (Optional - for advanced mood analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Local Music Settings
LOCAL_MUSIC_PATH=C:/Users/Dell/Music
DEFAULT_VOLUME=0.7

# Voice Interface Settings
ENABLE_VOICE_INPUT=true
ENABLE_VOICE_OUTPUT=true
LANGUAGE=en-US

# Mood History Settings
SAVE_MOOD_HISTORY=true
MOOD_HISTORY_FILE=mood_history.json

# Logging
LOG_LEVEL=INFO
LOG_FILE=mood_music_agent.log

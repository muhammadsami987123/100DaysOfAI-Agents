# TextFixer Assistant configuration

# Provider: languagetool | openai
PROVIDER=languagetool

# Language code or auto (examples: en-US, en-GB, de-DE, fr-FR)
LANGUAGE=auto

# Style: neutral | formal | casual
STYLE=neutral

# Global hotkeys (pynput format)
HOTKEY=<ctrl>+.
UNDO_HOTKEY=<ctrl>+<shift>+w

# Timing tweaks (milliseconds)
COPY_WAIT_MS=80
PASTE_WAIT_MS=60

# Logging & UX toggles
LOG_ENABLED=true
RESTORE_CLIPBOARD=true
TOAST_ENABLED=true
TOAST_DURATION_MS=800

# OpenAI (required if PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini


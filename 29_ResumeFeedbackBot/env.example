# ResumeFeedbackBot Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# OPTIONAL SETTINGS (with defaults)
# =============================================================================

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Flask Application Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production
HOST=127.0.0.1
PORT=5000

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Analysis Configuration
PORTFOLIO_ANALYSIS_DEPTH=3  # Number of pages to analyze for portfolios
RESUME_ANALYSIS_TIMEOUT=300  # Timeout in seconds for resume analysis
PORTFOLIO_ANALYSIS_TIMEOUT=180  # Timeout in seconds for portfolio analysis

# Chat Configuration
CHAT_HISTORY_LIMIT=50  # Maximum number of chat messages to remember
CHAT_TIMEOUT=60  # Timeout in seconds for chat responses

# Security Configuration
RATE_LIMIT_REQUESTS=100  # Maximum requests per hour per IP
RATE_LIMIT_WINDOW=3600  # Time window for rate limiting in seconds

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Uncomment and configure for production deployment
# FLASK_ENV=production
# FLASK_DEBUG=False
# SECRET_KEY=your-very-secure-production-secret-key
# HOST=0.0.0.0
# PORT=5000

# Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@localhost/resumebot

# Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry Configuration (for error tracking)
# SENTRY_DSN=your-sentry-dsn

# Google Analytics
# GA_TRACKING_ID=your-ga-tracking-id

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit your .env file to version control
# 2. Use strong, unique secret keys in production
# 3. Regularly rotate your OpenAI API key
# 4. Monitor your API usage to avoid unexpected charges
# 5. Set appropriate rate limits for your use case
